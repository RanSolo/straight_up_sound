%h2 Forgot your password?
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :song }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :login , :label=> "Email or Username",required: true, autofocus: true
  .form-actions
    = f.button :submit, "Send me reset password instructions"
= render "devise/shared/links"
